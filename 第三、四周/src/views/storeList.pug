extend _layout.pug

block content
    include mixins/_storeCard
    include mixins/_pagination
    - 
        var storeInfo = {
            img : "./img/70@2x.png",
            title : "台北中山旗艦店",
            tel : "(02)000-1234",
            startTime : "10:00",
            endTime : "21:00",
            address : "台北市中山區南京東路25巷2-1號",
            link : "./store.html",
        };
        var storeList = Array(9).fill(storeInfo);

        var cities = [
            { text: "台北市", value: "TPC" },
            { text: "台中市", value: "TCH" },
            { text: "珈龍市", value: "KAO" },
            { text: "墾丁市", value: "KTC" },
        ]
    
    main.l-main    
        header.l-cataBanner.box-full.mb-200.mb-100-pad(style=`background-image:url(./img/72@2x.png)`)
            .box-lg.h-full.d-flex.f-cross-end
                h2
                    +iconParagraph("pageBanner",["fas" ,"fa-map-marker-alt"],"門市據點", "rl" )
        .box-full
            .box-lg
                section.g-row.mb-400.mb-300-pad.mb-250-mb
                    .g-col-1-2.g-col-1-mb
                        p.form__lineSame.form__lineSame--lg.form__lineSame--md-pad.mb-0
                            label.form__subject(for="js-select-city") 選擇地區 
                            select.form__unit#js-select-city
                                each city in cities
                                    option(value= city.value)= city.text
                                
                ul.g-row.mb-n350.mb-n300-pad.mb-n250-mb
                    each store in storeList
                        li.g-col-1-3.g-col-1-2-pad.g-col-1-mb.mb-350.mb-300-pad.mb-250-mb
                            +storeCard(store)