extend _layout.pug

block content
    include mixins/_iconParagraph
    include mixins/_iconCard
    include mixins/_socialCard
    include mixins/_puzzle
    - 
        const index_iconCardList = [
            {
                img : "./img/index_circle-dollar.svg",
                title: "單一價格",
                content: "無論任何度數皆不需追加費用 即可擁有適合自己的薄型球面 鏡片。",
            },
            {
                img : "./img/index_clock-1.svg",
                title: "20 分鐘即可取件",
                content: "為了您的寶貴時間著想，以豐 富專業知識與技術將結帳到交 件的時間縮減至最快 20 分鐘 即可完成。",
            },
            {
                img : "./img/index_heart.svg",
                title: "安心售後服務",
                content: "我們提供長達 120 天的保固售後服務，不限會員資格皆享有免費深層保養及專業維修服務。",
            },
            {
                img : "./img/index_glasses.svg",
                title: "關於鏡片",
                content: "使用世界知名頂級品牌，抗UV、防汙鍍膜薄型非球面鏡片。",
            },
        ]
        const index_socialCardList = [
            {
                img : "./img/18@2x.png",
                title: "Jessy",
                content: "This is a wider card with supporting text below as a natural lead-in to additional content.",
                time : "Last updated 3 mins ago",
            },
            {
                img : "./img/25@2x.png",
                title: "Karen",
                content: "This is a wider card with supporting text below as a natural lead-in to additional content.",
                time : "Last updated 3 mins ago",
            },
            {
                img : "./img/36@2x.png",
                title: "Chelsea",
                content: "This is a wider card with supporting text below as a natural lead-in to additional content.",
                time : "Last updated 3 mins ago",
            },
            {
                img : "./img/45@2x.png",
                title: "Jane",
                content: "This is a wider card with supporting text below as a natural lead-in to additional content.",
                time : "Last updated 3 mins ago",
            },
        ]
    main.l-main.pb-0
        header.l-index-Intro.box-full
            .box-lg.h-full.d-flex.f-col.f-cross-end.f-main-center   
                h3.l-index-Intro__subTitle Promise-Desert 2020 早春系列
                h2.l-index-Intro__title 看得清，才能看得遠

        section.l-index-Feature.l-index-banner.box-full.bg-sub
            .box-lg
                h3.l-index-banner__title.color-main_em
                    | 用專業的心，做專業的事
                ul.g-row.gutter-v25-pad.gutter-v0-mb
                    each iconCard, i in index_iconCardList
                        li.g-col-1-4.g-col-1-2-pad.g-col-1-mb(class={"f-order-2-pad" : i == 0 || i==3 })
                            .l-index-Feature__cardBox
                                +iconCard(iconCard)

        section.l-index-Classic.l-index-banner.box-full
            .box-lg
                h3.l-index-banner__title.color-main_em.mb-200-mb
                    | 經典系列鏡框
                ul
                    li.g-row.l-index-Classic__row.mb-400.mb-100-pad
                        a.g-col-2-3.g-col-1-mb(href="#")
                            img(src="./img/8.png")
                        .g-col-1-3.l-index-Classic__row__iconCol
                            +iconParagraph("indexProductCata",["far","fa-gem"],"OPTICAL")
                        
                    li.g-row.l-index-Classic__row.mb-400.mb-100-pad
                        a.g-col-2-3.g-col-1-mb(href="./product_sunglasses.html")
                            .imgLayer
                                img(src="./img/15_2.png")
                                img.imgLayer__filter(src="./img/15_1.png")
                        .g-col-1-3.l-index-Classic__row__iconCol
                            +iconParagraph("indexProductCata",["far","fa-sun"],"SUNGLASSES")
                        
                    li.g-row.l-index-Classic__row.mb-400.mb-100-pad
                        a.g-col-2-3.g-col-1-mb(href="#")
                            img(src="./img/28.png")
                        .g-col-1-3.l-index-Classic__row__iconCol
                            +iconParagraph("indexProductCata",["fas","fa-bolt"],"FUNCTIONAL")
                            
        .l-index--centralBg
            section.l-index-Design.l-index-banner.box-full
                .box-lg
                    h3.l-index-banner__title.color-contrast
                        | 聯名設計鏡框
                .l-index-Design__puzzleBox
                    +puzzle()(href="./product_optical.html")
                    

                .box-lg.d-flex.f-col-mb
                    .slogan.mr-375.mr-300-pad.mr-0-mb.mb-250-mb
                        img(src="./img/14.png", alt="").d-none-pad
                        img(src="./img/14-mb@2x.png", ).d-none.d-block-pad
                        .slogan__filter
                        p.slogan__content Double A+
                    .slogan
                        img(src="./img/39.png", alt="").d-none-pad
                        img(src="./img/39-mb@2x.png", alt="").d-none.d-block-pad
                        .slogan__filter
                        p.slogan__content YOUTH
                        

        section.l-index-Recommend.l-index-banner.box-full
            .box-lg
                h3.l-index-banner__title.color-contrast
                    | 顧客推薦
                ul.g-row.gutter-v3-pad.gutter-v2-mb
                    each socialCard, i in index_socialCardList
                        li.g-col-1-4.g-col-1-2-pad.g-col-1-mb
                            +socialCard(socialCard)
        
        section.l-index-Contact.l-index-banner.box-full
            form.form--sub.box-md
                h3.l-index-banner__title
                    | 聯絡我們
                p.l-index-banner__desc
                    | 我們相當重視您的意見，若您有任何疑問，可先參考「常見問題」，若仍有任何問題，請填妥以下資料，我們會在近期與您聯繫。
                p.form__line
                    label.form__subject(for="name") 姓名
                    input.form__unit#name(name="name" placeholder="陳小明")
                p.form__line
                    label.form__subject(for="phone") 聯絡電話
                    input.form__unit#phone(name="phone" inputmode="numeric" placeholder="0912-345-678")
                p.form__line
                    label.form__subject(for="email") 電子郵件
                    input.form__unit#email(type="email" name="email" placeholder="example@email.com")
                p.form__line
                    label.form__subject(for="opinion") 意見反應
                    textarea.form__unit#opinion(name="name" placeholder="請輸入您的意見")
                p.mb-525
                    input.form__checkBox#policy(type="checkbox")
                    label(for="policy") 
                        span.form__checkBox__symbol
                        | 我同意隱私權政策，並同意依隱私權政策中所述的方式處理自己的資料。
                .d-flex.f-main-center
                    input.btn.btn--main(type="submit" value="確認送出")
                