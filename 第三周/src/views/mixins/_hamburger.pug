mixin hamburger(list)
    ul.hamburger.hamburger--main
        each item in list
            li.hamburger__list
                h4.hamburger__list__title=item.title
                    svg.hamburger__list__title__icon(width='38.943', height='24', viewBox='0 0 38.943 24')
                        path(d='M8.288,7.84l7.448,4.58,7.448-4.58,2.288,1.41-9.736,6L6,9.25Z', transform='translate(3.736 0.75)')
                            

                p.hamburger__list__content=item.content